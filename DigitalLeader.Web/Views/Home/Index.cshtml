@model List<DigitalLeader.ViewModels.CategoryViewModel>

@{
    Layout = null;
    ViewBag.Title = "Digital Leader  - your best digital solutions provider";
}

@Styles.Render("~/Content/homepage.less")
@*@Styles.Render("~/Content/service.less")*@

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#fff" />
    <link rel="icon" href="@Url.Content("~/content/images/favicon.ico")" type="image/x-icon">

    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/core-css")
    @Styles.Render("~/Content/core-less")
    @Styles.Render("~/Content/homepage.less")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</head>
<body>
    @Html.Partial("_NavigationBar")

    <div class="body-content">
        <div class="home container">
            <div class="row presentation">




                <div class="col-md-10 showcase">

                    <div id="carousel-demo" class="carousel vertical slide" data-ride="carousel" data-interval="2000">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-demo" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-demo" data-slide-to="1"></li>
                            <li data-target="#carousel-demo" data-slide-to="2"></li>
                            <li data-target="#carousel-demo" data-slide-to="3"></li>
                        </ol>

                        <!-- Sliding images statring here -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="~/Content/images/company/world-map.png" alt="banana">
                                <div class="carousel-caption">
                                    <h3>The Banana slide</h3>
                                    <p>Banana is useful for health</p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="~/Content/images/company/world-map.png" alt="currant">
                                <div class="carousel-caption">
                                    <h3>The currant slide</h3>
                                    <p>Text here</p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="~/Content/images/company/world-map.png" alt="mango">
                                <div class="carousel-caption">
                                    <h3>The Mangos</h3>
                                    <p>Text here</p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="~/Content/images/company/world-map.png" alt="strawberries">
                                <div class="carousel-caption">
                                    <h3>The strawberries</h3>
                                    <p>Text here</p>
                                </div>
                            </div>

                        </div>

                        <!-- Next / Previous controls here -->
                        <a class="up carousel-control" href="#carousel-demo" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-up"></span>
                        </a>
                        <a class="down carousel-control" href="#carousel-demo" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-down"></span>
                        </a>

                        <div>

                        </div>
                    </div>



                    <!--  <h1>We are your best technology solutions provider</h1> -->
                </div>
                <div class="col-md-2 services">
                    <div class="row">
                        @foreach (var category in Model)
                        {
                            //var srcAction = category.ImageId.HasValue ?
                            //Url.Action("Show", "File", new { area = "", id = category.ImageId }) : "";

                            <a href="#" class="col-md-12 service">
                                <div class="@category.CssClass"></div>
                                <hr />
                                <h3>@category.Name</h3>
                            </a>
                        }
                    </div>
                </div>




            </div>

            <div class="row footer">
                <div class="col-md-4 cta-title">
                    <h2>Let's upgrade your business!</h2>
                </div>
                <div class="col-md-8 form-wrapper">
                    <div class="row">
                        <div class="col-md-12">
                            <h3>What's your name?</h3>
                        </div>
                    </div>
                    <form class="row cta-form">
                        <div class="col-md-10">
                            <textarea>your name</textarea>
                        </div>
                        <div class="col-md-2">
                            <button><i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>




    @*@Html.Partial("_Footer")*@
</body>
</html>










