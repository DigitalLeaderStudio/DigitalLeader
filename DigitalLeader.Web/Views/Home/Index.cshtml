@model List<DigitalLeader.ViewModels.ServiceCategoryViewModel>

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Digital Leader  - your best digital solutions provider";
}

<div class="home container">
	<div class="row presentation">
		<div class="col-md-10 showcase">
			<div id="carousel-demo" class="carousel vertical slide" data-ride="carousel" data-interval="100000">
				<!-- Indicators -->
				<ol class="carousel-indicators">
					<li data-target="#carousel-demo" data-slide-to="0" class="active"></li>
					<li data-target="#carousel-demo" data-slide-to="1"></li>
					<li data-target="#carousel-demo" data-slide-to="2"></li>
				</ol>

				<!-- Sliding images statring here -->
				<div class="carousel-inner">
					<div class="item active main-slide">
						@*<img src="~/Content/images/company/world-map.png" alt="banana">*@
						<div class="carousel-caption">
							<h1>we are your best IT solutions provider</h1>
						</div>
					</div>
					<div class="item main-slide">
						@*<img src="~/Content/images/company/world-map.png" alt="banana">*@
						<div class="carousel-caption">
							<h1>Technology solutions</h1>
						</div>
					</div>
					<div class="item main-slide">
						@*<img src="~/Content/images/company/world-map.png" alt="banana">*@
						<div class="carousel-caption">
							<h1>Digital Marketing Solutions</h1>
						</div>
					</div>
				</div>

				<!-- Next / Previous controls here -->
				<a class="up carousel-control" href="#carousel-demo" data-slide="prev">
					<i class="fa fa-angle-up" aria-hidden="true"></i>
				</a>
				<a class="down carousel-control" href="#carousel-demo" data-slide="next">
					<i class="fa fa-angle-down" aria-hidden="true"></i>
				</a>
			</div>
		</div>

		<div class="col-md-2 service-categories">
			<div class="row">
				@foreach (var category in Model)
				{
					<div class="col-md-12 service-category @category.CssClass">
						<div class="image"></div>
						<hr />
						<h3>@category.Name</h3>

						<div class="menu-wrapper">
							<div id="menu" class="container-fluid">
								<div class="row">
									@foreach (var subcategory in category.ServiceSubcategories)
									{
										<div class="col-md-4">
											<h2>@subcategory.Name</h2>
											<ul>
												@foreach (var service in subcategory.Services)
												{
													<li>
														<a href="#">
															<h3>@service.Title</h3>
															<p>@service.Description</p>
														</a>
													</li>

												}
											</ul>
										</div>
									}
								</div>
							</div>
						</div>
					</div>
				}

			</div>
		</div>

	</div>

	<div class="row footer">
		<div class="col-md-4 cta-title">
			<h2>Let's upgrade your business!</h2>
		</div>
		@using (Html.BeginForm("Promo", "Home", FormMethod.Post, new { autocomplete = "off" }))
        {
			<div class="col-md-8 form-wrapper">
				<div class="row">
					<div class="col-md-12">
						<h3 id="form-header">What's your name?</h3>
					</div>
				</div>
				<div class="row cta-form">

					<div class="col-md-10" id="name">
						<input placeholder="Your name" name="FirstName">
					</div>

					<div class="col-md-10 hidden" id="email">
						<input placeholder="example@gmail.com" name="Email">
						<div class="progress">
							<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:50%">
							</div>
						</div>
					</div>

					<div class="col-md-10 hidden" id="phone">
						<input placeholder="(099)-555-55-55" name="Phone">
						<div class="progress">
							<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width:75%">
							</div>
						</div>
					</div>

					<div class="col-md-10 hidden" id="message">
						<textarea placeholder="Describe your problem" name="Message"></textarea>
						<div class="progress">
							<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">
							</div>
						</div>
					</div>

					<div class="col-md-2 button-wrapper">
						<button type="button" id="send-btn" class="next-step"><i class="fa fa-chevron-right" aria-hidden="true"></i></button>
					</div>
				</div>
			</div>
		}
	</div>

</div>

<script>
	$(document).ready(function () {
		$step = 0;

		$("#send-btn").click(function () {
			if ($step == 0) {
				$("#name").addClass("hidden");
				$("#email").removeClass("hidden");
				$("#form-header").text("Email address");
				$step++;
				return;
			}
			if ($step == 1) {
				$("#email").addClass("hidden");
				$("#phone").removeClass("hidden");
				$("#form-header").text("Phone number");
				$step++;
				return;
			}

			if ($step == 2) {
				$("#phone").addClass("hidden");
				$("#message").removeClass("hidden");
				$("#form-header").hide();
				$("#message").find("textarea").attr("placeholder", "your problem or message");
				$step++;
				$(this).attr("type", "submit");
				$(this).text("Send");
				$(this).addClass("final-step");
				return false;
			}
		});
	});

</script>