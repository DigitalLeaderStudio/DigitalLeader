@model DigitalLeader.ViewModels.BlogpostViewModel

@*Redisign it at all!*@

@{
	ViewBag.Title = "Details";
}

<div class="container-fluid resources blogpost">
	<div class="row header clearfix">
		<div>
			<h1>@Model.Title</h1>
			<div class="post-info">
				<div>
					<div class="info-item">
						<i class="fa fa-clock-o" aria-hidden="true"></i>
						@String.Format("{0:MMMM d, yyyy}", Model.PublishedDate)
					</div>
					<div class="separator"></div>
				</div>
				<div>
					<div class="info-item">
						<i class="fa fa-align-left" aria-hidden="true"></i>&nbsp;@Model.Service.Title
					</div>
					<div class="separator"></div>
				</div>
				<div>
					<div class="info-item">
						<i class="fa fa-user" aria-hidden="true"></i>&nbsp;@Model.Author.UserName
					</div>
					<div class="separator"></div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				@Html.Raw(Model.Content)
			</div>
		</div>
	</div>
</div>
