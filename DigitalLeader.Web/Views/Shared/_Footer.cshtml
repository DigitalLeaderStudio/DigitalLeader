@using DigitalLeader.Web.Localization
<footer class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-4 brand">
                <img src="~/Content/images/dl logo v2 white.png" />
            </div>
            <div class="col-md-7">
                <div class="col-md-12 message">
                    <p>
                       @Translations.FooterMessage
                    </p>
                </div>
                <div class="contacts">
                    <div class="col-md-4">
                        <p><i class="fa fa-map-marker" aria-hidden="true"></i></p>
                        <h3>@Translations.FooterAddress</h3>
                    </div>
                    <div class="col-md-4">
                        <p><i class="fa fa-phone" aria-hidden="true"></i></p>
                        <h3><a href="">+333 5555 4444</a></h3>
                    </div>
                    <div class="col-md-4">
                        <p><i class="fa fa-at" aria-hidden="true"></i></p>
                        <h3><a href="">info@digitalleader.solutions</a></h3>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <hr>
            </div>
        </div>

        <div class="row menu">
            <div class="col-md-2 col-md-offset-2">
                <h3>@Translations.LinkServices</h3>
                <ul class="menu-list">
                    <li>@Html.ActionLink("Technology Solutions", "Company", "Home")</li>
                    <li>@Html.ActionLink("Digital Marketing", "Serives", "Home")</li>
                </ul>
            </div>
            <div class="col-md-2">
                <h3>@Translations.LinkPortfolio</h3>
                <ul class="menu-list">
                    <li>@Html.ActionLink(Translations.LinkProjects, "Company", "Home")</li>
                    <li>@Html.ActionLink(Translations.LinkCaseStudies, "Clients", "Home")</li>
                    <li>@Html.ActionLink(Translations.LinkTestimonials, "Serives", "Home")</li>
                </ul>
            </div>
            <div class="col-md-2">
                <h3>@Translations.LinkCompany</h3>
                <ul class="menu-list">
                    <li>@Html.ActionLink(Translations.LinkOurStory, "Company", "Home")</li>
                    <li>@Html.ActionLink(Translations.LinkOurCreed, "Serives", "Home")</li>
                    <li>@Html.ActionLink(Translations.LinkOurTeam, "Clients", "Home")</li>
                    <li>@Html.ActionLink(Translations.LinkCareer, "Clients", "Home")</li>
                </ul>
            </div>
            <div class="col-md-2">
                <h3>@Translations.LinkResources</h3>
                <ul class="menu-list">
                    <li>@Html.ActionLink(Translations.LinkBlog, "Company", "Home")</li>
                    <li>@Html.ActionLink(Translations.LinkWhitePapers, "Serives", "Home")</li>
                    <li>@Html.ActionLink(Translations.LinkGuides, "Clients", "Home")</li>
                    <li>@Html.ActionLink(Translations.LinkInfographics, "Clients", "Home")</li>
                    <li>@Html.ActionLink(Translations.LinkVideos, "Clients", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid last-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 copyright">
                    <p>&copy; @DateTime.Now.Year Digital Leader - your best IT serives provider.</p>
                </div>
                <div class="col-md-4 social-links">
                    <ul>
                        <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fa fa-youtube" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
                <div class="col-md-4 terms">
                    <ul>
                        <li>@Html.ActionLink("Privacy", "Company", "Home")</li>
                        <li>@Html.ActionLink("Terms of Use", "Serives", "Home")</li>
                        <li>@Html.ActionLink("Feedback", "Clients", "Home")</li>
                            @Html.Partial("_LanguagesPartial")
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>

