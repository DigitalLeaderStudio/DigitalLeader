<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#fff" />
    <link rel="icon" href="@Url.Content("~/content/images/favicon.ico")" type="image/x-icon">

    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/core-css")
    @Styles.Render("~/Content/core-less")
    @Styles.Render("~/Content/chosen")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/chosen")
    @Scripts.Render("~/bundles/core-js")

    <link rel="icon" href="@Url.Content("~/Content/Images/favicon.png")" />

</head>
<body>
    @Html.Partial("_NavigationPartial")

    <div class="body-content">
        @RenderBody()
    </div>
    @Html.Partial("_Footer")

    @RenderSection("scripts", required: false)
</body>
</html>
