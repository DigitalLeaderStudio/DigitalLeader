@model DigitalLeader.ViewModels.TestimonialViewModel

@{
	ViewBag.Title = "Create new testimonial";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h2 class="text-center">Create new testimonial</h2>
<p class="text-center">
	@Html.ActionLink("Back to List", "Index")
</p>
<hr />

<div class="col-md-6 col-md-offset-3">
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">
			<h4>TestimonialViewModel</h4>
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })

			<div class="form-group">
				@Html.LabelFor(model => model.CreatedDate, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					<div class="input-group date datetimepicker">
						<span class="input-group-addon">
							<span class="glyphicon glyphicon-calendar"></span>
						</span>
						@Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control" } })
					</div>
					@Html.ValidationMessageFor(model => model.CreatedDate, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.ClientsSelectList, new { @class = "control-label col-md-2" })
				<div class="col-md-6">
					@Html.DropDownListFor(m => m.ClientID, Model.ClientsSelectList,
					new { @class = "form-control chosen-select", data_placeholder = "Chose a client" })
				</div>

				<div class="col-md-4">
					<a href="@Url.Action("Index", "Client", new { area = "Admin"})" ta target="_blank">Edit clients</a>
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Create" class="btn btn-default" />
				</div>
			</div>
		</div>
	}

</div>

<div class="col-md-12">
	<p class="text-center">
		@Html.ActionLink("Back to List", "Index")
	</p>
</div>
