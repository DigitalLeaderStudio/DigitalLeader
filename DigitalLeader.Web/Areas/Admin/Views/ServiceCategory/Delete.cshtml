@model DigitalLeader.ViewModels.ServiceCategoryViewModel

@{
	ViewBag.Title = "Delete";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Delete blogpost</h2>

<h3>Are you sure you want to delete this?</h3>
<hr />
<div class="col-md-6 col-md-offset-3">
    <dl class="dl-horizontal">
        <dt>
            Background image
        </dt>

        <dd>
            @{var srcAction = Model.ImageId.HasValue ?
                Url.Action("Show", "File", new { area = "", id = Model.ImageId }) :
                "/Content/img/default-user.png";
            }
            <img src="@srcAction" class="img-responsive" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CssClass)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CssClass)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.ServiceSubcategories)
        </dt>

        <dd>
            <ol>
            @foreach (var subCategory in Model.ServiceSubcategories)
            {
                <li>@subCategory.Name </li>
            }
                </ol>
        </dd>

    </dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color">
			<input type="submit" value="Delete" class="btn btn-default" />
		</div>
	}
</div>
<div class="col-md-12">
	<p class="text-center">
		@Html.ActionLink("Back to List", "Index")
	</p>
</div>
