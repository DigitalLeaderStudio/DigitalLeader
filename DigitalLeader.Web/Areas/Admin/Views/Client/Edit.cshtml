@model DigitalLeader.ViewModels.ClientViewModel
@using DigitalLeader.ViewModels;
@using DigitalLeader.Web.Extensions;

@{
	ViewBag.Title = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Edit client</h2>
<p class="text-center">
	@Html.ActionLink("Back to List", "Index")
</p>
<hr />
<div class="col-md-6 col-md-offset-3">
	@using (Html.BeginForm("Edit", "Client", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">

			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.ID)

			<div class="form-group">
				@Html.LabelFor(model => model.File, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@{
		var srcAction = Model.ImageId.HasValue ?
		Url.Action("Show", "File", new { area = "", id = Model.ImageId }) :
		"/Content/img/default-user.png";
					}
					<img src="@srcAction" class="img-responsive" />

					@Html.TextBoxFor(model => model.File, new { @type = "file" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Company, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@(Html.LocalizedEditor<ClientViewModel, ClientViewModel.ClientLocalizedModel>
				("client-localized-Company",
				@<div>
					@Html.EditorFor(model => model.Locales[item].Company, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Locales[item].Company, "", new { @class = "text-danger" })
					@Html.HiddenFor(model => model.Locales[item].LanguageId)
				</div>,
					@<div>
						@Html.EditorFor(model => model.Company, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.Company, "", new { @class = "text-danger" })
					</div>, true))
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@(Html.LocalizedEditor<ClientViewModel, ClientViewModel.ClientLocalizedModel>
				("client-localized-FirstName",
				@<div>
					@Html.EditorFor(model => model.Locales[item].FirstName, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Locales[item].FirstName, "", new { @class = "text-danger" })
					@Html.HiddenFor(model => model.Locales[item].LanguageId)
				</div>,
					@<div>
						@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
					</div>, true))
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@(Html.LocalizedEditor<ClientViewModel, ClientViewModel.ClientLocalizedModel>
				("client-localized-LastName",
				@<div>
					@Html.EditorFor(model => model.Locales[item].LastName, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Locales[item].LastName, "", new { @class = "text-danger" })
					@Html.HiddenFor(model => model.Locales[item].LanguageId)
				</div>,
					@<div>
						@Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
					</div>, true))
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@(Html.LocalizedEditor<ClientViewModel, ClientViewModel.ClientLocalizedModel>
				("client-localized-Title",
				@<div>
					@Html.EditorFor(model => model.Locales[item].Title, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Locales[item].Title, "", new { @class = "text-danger" })
					@Html.HiddenFor(model => model.Locales[item].LanguageId)
				</div>,
					@<div>
						@Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
					</div>, true))
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.JoinDate, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					<div class="input-group date datetimepicker" @*date-format="DD/MM/YYYY"*@>
						<span class="input-group-addon">
							<span class="glyphicon glyphicon-calendar"></span>
						</span>
						@Html.EditorFor(model => model.JoinDate, new { htmlAttributes = new { @class = "form-control" } })
					</div>
					@Html.ValidationMessageFor(model => model.JoinDate, "", new { @class = "text-danger" })
				</div>
			</div>

			

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Save" class="btn btn-default" />
				</div>
			</div>
		</div>
	}

</div>
<div class="col-md-12">
	<p class="text-center">
		@Html.ActionLink("Back to List", "Index")
	</p>
</div>