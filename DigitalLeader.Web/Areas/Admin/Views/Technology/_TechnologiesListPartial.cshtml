@model List<DigitalLeader.ViewModels.TechnologyViewModel>

@Styles.Render("~/Content/chosen")
@Scripts.Render("~/bundles/chosen")

<ul class="nav nav-pills">

	@foreach (var item in Model)
	{
		<li role="presentation">
			<a href="#">
				@item.Name&nbsp;<i class="fa fa-trash"></i>
			</a>
		</li>
	}

</ul>

<a href="#" data-toggle="modal" data-target="#technologiesModal">
	<i class="fa fa-plus-square"></i>
</a>

<!-- Modal -->
<div class="modal fade" id="technologiesModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<a href="#" data-dismiss="modal"><i class="fa fa-close"></i></a>
				<h4 class="modal-title" id="myModalLabel">Modal title</h4>
			</div>
			<div class="modal-body">
				...
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Save changes</button>
			</div>
		</div>
	</div>
</div>