@model DigitalLeader.ViewModels.UserViewModel

@{
	ViewBag.Title = "Details";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">View client details</h2>
<p class="text-center">
	@Html.ActionLink("Back to List", "Index")
</p>
<hr />

<div>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="thumbnail">
				@{
					var srcAction = Model.ImageId.HasValue ?
					Url.Action("Show", "File", new { area = "", id = Model.ImageId }) :
					"/Content/img/default-user.png";
				}
				<img src="@srcAction" />
				<div class="caption">
					<h3>@Model.UserName</h3>
					<>
						<dl class="dl-horizontal">

							<dt>
								@Html.DisplayNameFor(model => model.Email)
							</dt>

							<dd>
								@Html.DisplayFor(model => model.Email)
							</dd>

							<dt>
								@Html.DisplayNameFor(model => model.Biography)
							</dt>

							<dd>
								@Html.DisplayFor(model => model.Biography)
							</dd>

							<dt>
								@Html.DisplayNameFor(model => model.ExperianceYears)
							</dt>

							<dd>
								@Html.DisplayFor(model => model.ExperianceYears)
							</dd>

							<dt>
								@Html.DisplayNameFor(model => model.Technologies)
							</dt>

							<dd>
								@foreach(var tech in Model.Technologies)
								{
									<text>@tech.Name</text>
								}
							</dd>

						</dl>
					</p>
					<p>
						<a href="@Url.Action("Edit", "User", new { id = Model.Id })" class="btn btn-primary" role="button">Edit</a>
						<a href="@Url.Action("Delete", "User", new { id = Model.Id })" class="btn btn-primary" role="button">Delete</a>

					</p>
				</div>
			</div>
		</div>
	</div>
	
</div>
<p class="text-center">
	@Html.ActionLink("Back to List", "Index")
</p>