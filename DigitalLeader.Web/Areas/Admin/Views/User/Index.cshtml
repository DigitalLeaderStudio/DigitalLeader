@model IEnumerable<DigitalLeader.ViewModels.UserViewModel>

@{
	ViewBag.Title = "Users list";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Users list</h2>
<p class="text-center">
	@Html.ActionLink("Create New", "Create")
</p>
<hr />

<table class="table table-hover">
	<tr>
		<th>
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ExperianceYears)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.UserName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Email)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Biography)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Title)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@{
		var srcAction = item.ImageId.HasValue ?
		Url.Action("Show", "File", new { area = "", id = item.ImageId }) :
		"/Content/images/default-user.png";
				}
				<img src="@srcAction" alt="@item.UserName" class="img-responsive" width="50" />
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ExperianceYears)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.UserName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Email)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Biography)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Title)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
				@Html.ActionLink("Details", "Details", new { id = item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.Id })
			</td>
		</tr>
	}

</table>
