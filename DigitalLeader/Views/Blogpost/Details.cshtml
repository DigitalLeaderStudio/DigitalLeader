@model DigitalLeader.Models.Blogpost

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div class="container">
    <div class="row title-wrapper">
        <div class="col-md-12">
            <h1>@Html.DisplayFor(model => model.Title)</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            @Html.Raw(Model.Content)
        </div>
        <div class="col-md-4">
            <h2>Blog menu</h2>
            @{ Html.RenderAction("Categories", "Blogpost"); }
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    </div>
</div>


