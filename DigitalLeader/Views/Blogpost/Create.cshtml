@model DigitalLeader.Models.Blogpost

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Edit</h2>
            <h4>Blog</h4>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>

        @using (Html.BeginForm("Create", "Blogpost", FormMethod.Post, new { @class = "col-md-8 col-md-offset-2" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label" })
                @{ Html.EnableClientValidation(false); }
                @Html.TextAreaFor(model => model.Content, new { @id = "editor1" })
                @{ Html.EnableClientValidation(true); }
                <script>
                    CKEDITOR.replace('editor1');
                </script>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Visible, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Visible)
                @Html.ValidationMessageFor(model => model.Visible, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-8 col-md-4">
                    <input type="submit" value="Save" class="btn" />
                </div>
            </div>
         }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}